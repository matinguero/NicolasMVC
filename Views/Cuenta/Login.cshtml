@model NicolasMVC.Models.Cuenta

@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>



<div class="row">
    <div class="col-3">

    </div>
    <div class="col">

        <div class="card w-50">
            <div class="card-header text-center">
                <h2 id="title">@ViewBag.Title</h2>

            </div>
            <div class="card-body">

                <form action="@Url.Action("LoginForm", "Cuenta")" method="post" autocomplete="off">

                    <input autocomplete="false" name="hidden" type="hidden">
                    @Html.AntiForgeryToken()


                    <div class="col-10 mb-3">
                        <label for="Campo1">Usuario:</label>
                        <input type="email" name="Usuario" id="Usuario" value="@Model.Usuario" class="form-control" autocomplete="off" placeholder="Ingrese el Usuario" />
                        <span class="text-danger">@Html.ValidationMessage("Usuario")</span>
                    </div>

                    <div class="col-10 mb-3">
                        <label for="Campo2">Clave:</label>
                        <input type="password" name="Clave" id="Clave" value="@Model.Clave" class="form-control" autocomplete="off" placeholder="Ingrese la clave" />
                        <span class="text-danger">@Html.ValidationMessage("Clave")</span>
                    </div>


                    <input id="id" name="id" type="hidden" value="@Model.Id" />

                    <div class="d-grid gap-2 col-12">
                        <div class="text-danger text-center">

                            <h6>@ViewBag.Message</h6>
                        </div>
                    </div>

                    <br />
                    <div class="d-grid gap-2 col-8">

                        <button type="submit" class="btn btn-primary">Enviar</button>
                    </div>
                </form>

            </div>
        </div>


    </div>

</div>

